<!DOCTYPE html>
<html>
  <head>
    <title>Knowledgebase</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-dark bg-dark navbar-expand-lg">
      <%= link_to 'Knowledge Base', articles_path, class: 'navbar-brand' %>
      <nav class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to 'Articles', articles_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'New Article', new_article_path, class: 'nav-link' %></li>
        </ul>
      </nav>
    </header>
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
